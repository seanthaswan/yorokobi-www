---
import { GoogleFontsOptimizer } from "astro-google-fonts-optimizer";

import '~/assets/styles/base.css';

import MetaTags from '~/components/common/MetaTags.astro';
import BasicScripts from '~/components/common/BasicScripts.astro';

import { MetaSEO } from '~/types';
import { SITE } from '~/config.mjs';

export interface Props {
  meta?: MetaSEO;
}

const { meta = {} } = Astro.props;
const { language = 'en', textDirection = 'ltr' } = SITE;
---

<!DOCTYPE html>
<html lang={language} dir={textDirection} class="xl:text-[20px]">
  <head>
    <MetaTags {...meta} />
        <GoogleFontsOptimizer url="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,400;0,700;1,400&family=Space+Mono:ital@1&display=swap" />

  </head>

  <body
    class="antialiased tracking-tight flex flex-col bg-blend-darken bg-white bg-skinPattern justify-between items-center bg-skin-accent h-screen font-skinDisplay"
  >
    <slot />
    <BasicScripts />
    <style is:global>
      :root {
        --font-family-skin-display: 'Open Sans';
        --color-bg-base: #fff;
        --color-bg-accent: #D1c7bd;
        --color-shadow: 135 103 123;
        --bg-image-skin-pattern: url('../images/cactus-seamless.webp');
        --bg-image-skin-pattern-size: 250px;
      }
      img {
        content-visibility: auto;
      }
    </style>
  </body>
</html>
